#guides .span3, #guides .span4, #native .span3, #native .span4 {
  box-shadow: inset 0 0 2px #888;
  border-radius: 8px;
  margin-bottom: 6px;
}
*/
#native ul li a {
  color: #0088cc;
  text-decoration: none;
}

#native ul li a:hover {
  color: #005580;
  text-decoration: underline;
}

#demo-modal-body {
	max-height: 480px;
}

#demo-canvas {
  border: 5px solid black;
}

.figure-wrapper {
  text-align: center;
}

.figure-wrapper img {
	-moz-border-radius 6px
	-webkit-border-radius 6px
	border-radius 6px
	-moz-box-shadow 0px 0px 6px #000
	-webkit-box-shadow 0px 0px 6px #000
	box-shadow 0px 0px 6px #000
	border none
	padding 8px
	filter dropshadow(color=#2e2e2e, offx=6, offy=6)
}

figure {
	margin: 15px auto;
	text-align: center;
	display: inline-block;
}

figcaption {
	font-weight: 700;
	font-size: 0.9em;
	margin-top: 10px;
}

figcaption:before {
	content: "Figure: ";
}

.scrollable-content {
  position: absolute;
  top: 85px;
  padding-top: 20px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  overflow: auto;
}

/* adjust navbar spacing to avoid double-line */
@media (max-width: 1050px) {
  .navbar-fixed-top .nav li a {
    padding-right: 5px;
    padding-left: 5px;
  }
}

.full-page-iframe
  width 100%
  height 100%
  border 0

.full-page-wrapper
  position absolute
  top 44px
  left 0px
  right 0px
  bottom 0px

/* medium */
@media (max-width: 979px) {
  body {
    padding-top: 0px;
  }

  #front-page-content .content-box {
    padding-left: 6px;
  }

  .navbar-fixed-top .nav li a {
    font-size: 0.9em;
    font-weight: 400;
    padding-right: 10px;
    padding-left: 10px;
  }

  .dropdown-menu a{
    color: #ddd !important;
  }

  #toc-well {
    position: static;
    max-height: none;
    float: none;
    top: auto;
  }

  .row-fluid .span2 {
    width: 100%;
  }

  .scrollable-content {
    position: inherit;
  }

  .sub-nav {
    padding-right: 10px;
    padding-left: 35px;
    height: 20px;
    min-height: 20px;
  }

  .sub-nav.collapse li {
    visibility: hidden;
  }

  .sub-nav.in.collapse li{
    visibility: visible;
  }

  .sub-nav.in.collapse {
    min-height: 40px;
  }

  .full-page-wrapper {
    position: static;
    margin-top: -20px;
    top: 0px;
  }

  .scrollable-content {
    top: 95px;
  }
}

@media (max-width: 768px) {
  #toc-well {
    max-height: none;
    overflow-y: visible;
    position: static;
  }
}

@media (max-width: 480px) {
  #front-page-content .content-box {
    padding-left: 4px;
  }

	#splash {
		width: 100%;
	}

	#splash img {
		width: 75px;
	}

	#splash-logo {
		margin-top: 0;
	}

	#splash-logo h1 {
		font-size: 2em;
	}

	#splash-logo h2 {
		margin-top: -5px;
		font-size: 3em;
	}

	#splash-download {
		float: left;
	}

	#splash-download p {
		font-size: 1em;
	}

	#feature-list img {
		width: 100px;
	}
}

@media (max-width: 480px) {
	#zenbox_tab {
		display: none !important;
	}
}